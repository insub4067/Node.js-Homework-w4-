  <title>Write</title>

  <script>
    function submitPosting() {
      let contentId = new Date().getTime();
      let title = $('#title').val();
      let name = $('#name').val();
      let password = $('#password').val();
      let content = $('#content').val();
      console.log(contentId, title, name, password, content);

      $.ajax({
        type: "POST",
        url: '/api/posts',
        data: {
          'contentId': contentId,
          'title': title,
          'name': name,
          'password': password,
          'content': content,
        },
        success: function (response) {
          console.log("POST API successful");
        }
      })
      window.location.href = '/main';
    }
  </script>

</head>

<body style="height: 100vh; display: flex; justify-content: center;">
  <div class="inner" style="width: 65%;">
    <nav class="navbar navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/main">Node.JS Homework</a>
      </div>
    </nav>

    <div>
      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">제목</span>
        <input id="title" type="text" class="form-control" placeholder="" aria-label="Username"
          aria-describedby="basic-addon1">
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">이름</span>
        <input id="name" type="text" class="form-control" placeholder="" aria-label="Username"
          aria-describedby="basic-addon1">
      </div>

      <div class="input-group mb-3">
        <span class="input-group-text" id="basic-addon1">비밀번호</span>
        <input id="password" type="password" class="form-control" placeholder="" aria-label="Username"
          aria-describedby="basic-addon1">
      </div>

      <div class="input-group">
        <span class="input-group-text">글 내용</span>
        <textarea id="content" class="form-control" aria-label="With textarea"></textarea>
      </div>
      <div style="display: flex; width: 100%; justify-content: flex-end;">
        <a style="margin-top: 10px;" onclick="submitPosting()" class="btn btn-primary"
          role="button">등록쓰기</a>
      </div>
    </div>
  </div>

</body>

